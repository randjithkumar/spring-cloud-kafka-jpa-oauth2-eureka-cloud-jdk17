server:
  port: 8081

spring:
  application:
    name: authentic
  datasource:
    url: jdbc:mysql://localhost:3306/authentic?createDatabaseIfNotExist=true
    username: root
    password: password
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
  session:
    store-type: jdbc
    jdbc:
      initialize-schema: always
      table-name: SESSIONS

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/
    register-with-eureka: true
    fetch-registry: true
