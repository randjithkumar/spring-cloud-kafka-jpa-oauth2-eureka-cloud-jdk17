server:  
  port: ${PORT:8761}

spring:  
  application:
    name: discovery-service

logging:
    level:
      '[org.springframework.cloud.netflix.eureka]': trace
    
eureka:
  client:
    registerWithEureka: false
    fetchRegistry: false
    serviceUrl:
      defaultZone: http://${eureka.instance.hostname}:${server.port}/eureka/
  instance:
    hostname: localhost
  server:
    enable-self-preservation: false

management:
  endpoints:
    web:
      exposure:
        include:
        - health