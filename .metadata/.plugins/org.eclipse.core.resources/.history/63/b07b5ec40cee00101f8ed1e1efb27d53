server:
  port: ${PORT:8765}

spring:
  application:
    name: gateway
	
  cloud:
    gateway:
      mvc:
        paths: "/employee/**,/department/**,/organization/**"
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true
  security:
    oauth2:
      resourceserver:
        jwt:
          issuer-uri: http://localhost:8081/auth/realms/master  # Keycloak/Auth server
  datasource:
    name: 
eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/
    fetch-registry: true
    register-with-eureka: true
  instance:
    prefer-ip-address: true

management:
  endpoints:
    web:
      exposure:
        include: "*"
  endpoint:
    health:
      show-details: always
